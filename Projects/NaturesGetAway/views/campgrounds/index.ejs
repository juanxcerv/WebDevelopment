<% include ../partials/index %> 

<section class = "hero">
    <div class = "background-image" style = "background-image: url('https://images.unsplash.com/photo-1443996104801-80c82e789b18?dpr=2&auto=format&fit=crop&w=767&h=510&q=60&cs=tinysrgbimages.unsplash.com/photo-1485470733090-0aae1788d5af?auto=format&fit=crop&w=1391&q=80')"></div>
    <div class = "hero-content-area">
        <h1>NaturesGetAway</h1>
        <p> Welcome to the community of travelers and nature's enthusiasts. Get started right away by sharing your latest adventure! Or scroll on down
        and look at what others have added. </p>
        <p>
        <a class="btn" id = "special-btn" href="/campgrounds/new">Create a GetAway</a>
        </p>
    </div>
</section>
 <div class="container"> 
     <section id = "header">
        <h3>The GetAways</h3>
        <p>Each Nature GetAway has an image of the actual location taken by one of our many adventurists.
            Each post shows the exact destination, an estimated price per day for the travel, and a description so you won't miss a thing!
        </p>
        <hr>
    </section>
    <nav class="navbar navbar-default" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link hoverable active" href="/campgrounds">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link hoverable" href="/campgrounds/Summer">Summer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link hoverable" href="/campgrounds/Fall">Fall</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link hoverable" href="/campgrounds/Winter">Winter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link hoverable" href="/campgrounds/Spring">Spring</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class = "hovereffect">
                        <img class = "img-responsive" src="<%= campground.image %>">
                        <div class="overlay">
                            <p>
                                <a href="/campgrounds/<%= campground._id %>"><%= campground.location %></a>
                            </p>
                        </div>
                    </div>
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="row text-center">
    <% if (pages && pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/campgrounds">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>
</div>
<footer>
    <p>NaturesGetAway 2018</p>
    <p>Contact information: <a href="mailto:juanxcerv@berkeley.edu">
        juanxcerv@berkeley.edu</a>.
    </p>
</footer> 

