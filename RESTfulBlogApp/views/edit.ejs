<% include ./partials/header %>
<body id = "edit">
    <div class = "ui main text container inverted segment">
        <div class = "ui huge header">
            <%= blog.title %>
        </div>
        <form class ="ui inverted form" action = "/blogs/<%= blog._id %>?_method=PUT" method = "POST">
            <div class = "field">
                <label>Title:</label>
                <input type="text" name= "blog[title]" value = "<%= blog.title %>">
            </div>
            <div class = "field">
                <label>Image URL:</label>
                <input type="text" name= "blog[image]" value = "<%= blog.image %>">
            </div>
            <div class = "field">
                <label>Blog Content:</label>
                <textarea rows="5" cols="1" name= "blog[body]"><%= blog.body %></textarea>
            </div>
            <button class = "ui inverted purple button">Submit Your Edit</button>
        </form>
    </div>

<% include ./partials/footer %>
